# Password recovery
brew 'crunch'
brew 'hashcat'
brew 'hcxtools'
brew 'john-jumbo'
brew 'aircrack-ng'

# scan for subdomains using bruteforcing techniques
brew 'dnsmap'

# Netcat with FW/IDS/IPS evasion, self-inject-, bind- and reverse shell
brew 'pwncat'

# "The fastest way to identify anything" (guess filetype)
brew 'lemmeknow'

# Tool for downloading RTMP streaming media
brew 'rtmpdump'

# CLI client for Shodan.io
brew 'shodan'


