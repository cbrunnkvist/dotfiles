# Network sniffer UI + tshark CLI
cask 'wireshark'

# Network mapper UI + nmap CLI
cask 'zenmap'

# sends arp and/or ip pings to a given host
brew 'arping'

# Perform common IP calculations
brew 'ipcalc'

# Global p2p merkle-dag filesystem
brew 'ipfs'

# a network diagnostic tool (traceroute)
brew 'mtr'

# Rclone syncs files to and from cloud storage providers
brew 'rclone'

# tool for managing Amazon S3 storage space and Amazon CloudFront content delivery network
brew 's3cmd'

# user interface to the TELNET protocol
brew 'telnet'


